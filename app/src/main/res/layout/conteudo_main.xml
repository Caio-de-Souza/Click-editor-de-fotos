<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    tools:context="com.souza.caio.click.telas.MainActivity"
    tools:showIn="@layout/activity_main">

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/image_preview"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menus"/>

   <HorizontalScrollView
       android:id="@+id/menus"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:fillViewport="true"
       android:measureAllChildren="false"
       android:scrollbars="horizontal"
       android:layout_weight="1">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="10dp">

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_filtros"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:padding="16dp"
               app:cardBackgroundColor="@color/card_bckg">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_image"
                       android:layout_gravity="center"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Filtros"
                       android:textStyle="bold"
                       android:textColor="@color/branco"
                       android:textSize="18sp"
                       android:textAlignment="center"/>

               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btnEditaImagem"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:layout_marginLeft="8dp"
               android:padding="16dp"
               app:cardBackgroundColor="@color/card_bckg">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_edit"
                       android:layout_gravity="center"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Editar"
                       android:textStyle="bold"
                       android:textColor="@color/branco"
                       android:textSize="18sp"
                       android:textAlignment="center"/>

               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_pintar"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:layout_marginLeft="8dp"
               android:padding="16dp"
               app:cardBackgroundColor="@color/card_bckg">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_brush"
                       android:layout_gravity="center"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Pintar"
                       android:textStyle="bold"
                       android:textColor="@color/branco"
                       android:textSize="18sp"
                       android:textAlignment="center"/>

               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_add_imagem"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:layout_marginLeft="8dp"
               android:padding="16dp"
               app:cardBackgroundColor="@color/card_bckg">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_image"
                       android:layout_gravity="center"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Add Imagem"
                       android:textStyle="bold"
                       android:textColor="@color/branco"
                       android:textSize="18sp"
                       android:textAlignment="center"/>

               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_add_text"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:layout_marginLeft="8dp"
               android:padding="16dp"
               app:cardBackgroundColor="@color/card_bckg">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_text"
                       android:layout_gravity="center"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Add Texto"
                       android:textStyle="bold"
                       android:textColor="@color/branco"
                       android:textSize="18sp"
                       android:textAlignment="center"/>

               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_add_emoji"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:layout_marginLeft="8dp"
               android:padding="16dp"
               app:cardBackgroundColor="@color/card_bckg">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_emoji"
                       android:layout_gravity="center"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Emoji"
                       android:textStyle="bold"
                       android:textColor="@color/branco"
                       android:textSize="18sp"
                       android:textAlignment="center"/>

               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/btn_cortar"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:layout_marginLeft="8dp"
               android:padding="16dp"
               app:cardBackgroundColor="@color/card_bckg">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical|center_horizontal">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_crop"
                       android:layout_gravity="center"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Cortar"
                       android:textStyle="bold"
                       android:textColor="@color/branco"
                       android:textSize="18sp"
                       android:textAlignment="center"/>

               </LinearLayout>
           </androidx.cardview.widget.CardView>


       </LinearLayout>


   </HorizontalScrollView>

</RelativeLayout>