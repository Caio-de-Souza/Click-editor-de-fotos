<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.souza.caio.click.fragmentos.BrushFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:text="Espessura do pincel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <SeekBar
            android:id="@+id/seekbar_espessura_pincel"
            android:min="1"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Opacidade do pincel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <SeekBar
            android:id="@+id/seekbar_opacidade_pincel"
            android:min="1"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_cores"
            android:layout_width="match_parent"
            android:layout_height="80dp"></androidx.recyclerview.widget.RecyclerView>

        <ToggleButton
            android:id="@+id/btn_estado_pincel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOff="Pincel"
            android:textOn="Borracha"/>

    </LinearLayout>

</RelativeLayout>